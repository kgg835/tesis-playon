<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	   		http://www.springframework.org/schema/context
	   		http://www.springframework.org/schema/context/spring-context-3.1.xsd
			http://www.springframework.org/schema/tx 
            http://www.springframework.org/schema/tx/spring-tx-3.1.xsd
            http://www.springframework.org/schema/mvc 
			http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd">

	<context:component-scan base-package="tesis.playon.restful" />

	<!-- Data Source Declaration -->
	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource"
		destroy-method="close">
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="jdbcUrl"
			value="jdbc:mysql://localhost:3306/tesis_playon?useUnicode=true&amp;characterEncoding=UTF-8" />
		<property name="user" value="playonAdmin" />
		<property name="password" value="playon" />
		<property name="maxPoolSize" value="10" />
		<property name="maxStatements" value="0" />
		<property name="minPoolSize" value="5" />
	</bean>

	<!-- Session Factory Declaration -->
	<bean id="SessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>tesis.playon.restful.bean.Abono</value>
				<value>tesis.playon.restful.bean.Barrio</value>
				<value>tesis.playon.restful.bean.Calificacion</value>
				<value>tesis.playon.restful.bean.CargoEmpleado</value>
				<value>tesis.playon.restful.bean.CategoriaVehiculo</value>
				<value>tesis.playon.restful.bean.Cliente</value>
				<value>tesis.playon.restful.bean.ColorVehiculo</value>
				<value>tesis.playon.restful.bean.Comentario</value>
				<value>tesis.playon.restful.bean.CuentaCliente</value>
				<value>tesis.playon.restful.bean.CuentaPlaya</value>
				<value>tesis.playon.restful.bean.DenunciaPlaya</value>
				<value>tesis.playon.restful.bean.DenunciaVehiculo</value>
				<value>tesis.playon.restful.bean.DetalleEstadia</value>
				<value>tesis.playon.restful.bean.Empleado</value>
				<value>tesis.playon.restful.bean.Estadia</value>
				<value>tesis.playon.restful.bean.EstadoDenuncia</value>
				<value>tesis.playon.restful.bean.EstadoPlaya</value>
				<value>tesis.playon.restful.bean.EstadoPromocion</value>
				<value>tesis.playon.restful.bean.EstadoPublicidad</value>
				<value>tesis.playon.restful.bean.Favorito</value>
				<value>tesis.playon.restful.bean.Foto</value>
				<value>tesis.playon.restful.bean.HistorialDeCambio</value>
				<value>tesis.playon.restful.bean.Liquidacion</value>
				<value>tesis.playon.restful.bean.Localidad</value>
				<value>tesis.playon.restful.bean.MarcaVehiculo</value>
				<value>tesis.playon.restful.bean.ModeloVehiculo</value>
				<value>tesis.playon.restful.bean.Pais</value>
				<value>tesis.playon.restful.bean.PerfilPlaya</value>
				<value>tesis.playon.restful.bean.Playa</value>
				<value>tesis.playon.restful.bean.Posicion</value>
				<value>tesis.playon.restful.bean.Promocion</value>
				<value>tesis.playon.restful.bean.Provincia</value>
				<value>tesis.playon.restful.bean.Publicidad</value>
				<value>tesis.playon.restful.bean.RolesPorUsuario</value>
				<value>tesis.playon.restful.bean.RolUsuario</value>
				<value>tesis.playon.restful.bean.Sesion</value>
				<value>tesis.playon.restful.bean.Tarifa</value>
				<value>tesis.playon.restful.bean.TipoDoc</value>
				<value>tesis.playon.restful.bean.TipoEstadia</value>
				<value>tesis.playon.restful.bean.TipoPago</value>
				<value>tesis.playon.restful.bean.TransaccionCliente</value>
				<value>tesis.playon.restful.bean.TransaccionPlaya</value>
				<value>tesis.playon.restful.bean.Usuario</value>
				<value>tesis.playon.restful.bean.UsuarioSistema</value>
				<value>tesis.playon.restful.bean.Vehiculo</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
	</bean>

	<!-- Enable the configuration of transactional behavior based on annotations -->
	<tx:annotation-driven transaction-manager="txManager" />

	<!-- Transaction Manager is defined -->
	<bean id="txManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="SessionFactory" />
	</bean>

</beans>