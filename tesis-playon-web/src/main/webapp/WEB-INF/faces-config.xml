<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
  	
  	<!-- JSF and Spring are integrated -->
  	<application>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
  	</application>
   
   	<navigation-rule>
    	<display-name>admin/**</display-name>
    	<from-view-id>/admin/**</from-view-id>
    	<navigation-case>
    		<from-action>#{loginMB.logout}</from-action>
    		<from-outcome>LoggedOut</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>cliente/**</display-name>
    	<from-view-id>/cliente/**</from-view-id>
    	<navigation-case>
    		<from-action>#{loginMB.logout}</from-action>
    		<from-outcome>LoggedOut</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>playa/**</display-name>
    	<from-view-id>/playa/**</from-view-id>
    	<navigation-case>
    		<from-action>#{loginMB.logout}</from-action>
    		<from-outcome>LoggedOut</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
   
    <navigation-rule>
    	<display-name>secure/logout.xhtml</display-name>
    	<from-view-id>/secure/logout.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{loginMB.logout}</from-action>
    		<from-outcome>LoggedOut</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
   
    <navigation-rule>
    	<display-name>login.xhtml</display-name>
    	<from-view-id>/login.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredAdmin</from-outcome>
    		<to-view-id>/admin/index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredAuditor</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredContador</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredGerentePlaya</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredUser</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredClient</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>UnSecured</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.logout}</from-action>
    		<from-outcome>LoggedOut</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<display-name>index.xhtml</display-name>
    	<from-view-id>/index.xhtml</from-view-id>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredAdmin</from-outcome>
    		<to-view-id>/admin/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredAuditor</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredContador</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredGerentePlaya</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredUser</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>SecuredClient</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    		<redirect />
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.login}</from-action>
    		<from-outcome>UnSecured</from-outcome>
    		<to-view-id>/login.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-action>#{loginMB.logout}</from-action>
    		<from-outcome>LoggedOut</from-outcome>
    		<to-view-id>/index.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
      
</faces-config>