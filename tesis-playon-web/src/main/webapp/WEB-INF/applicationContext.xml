	<!-- User DAO Declaration -->
	<bean id="PaisDao" class="tesis.playon.web.dao.impl.PaisDao">
		<property name="sessionFactory" ref="SessionFactory" />
	</bean>
	<bean id="ProvinciaDao" class="tesis.playon.web.dao.impl.ProvinciaDao">
