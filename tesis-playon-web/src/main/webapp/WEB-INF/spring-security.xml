<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<global-method-security secured-annotations="enabled">
	</global-method-security>

	<!-- resource security -->
	<http auto-config="true" access-denied-page="/accessdenied.html">
		<intercept-url pattern="/admin/*" access="ROLE_ADMIN" />
		<form-login login-processing-url="/j_spring_security_check"
			login-page="/login.html" default-target-url="/"
			authentication-failure-url="/loginfailed.html" />
		<logout logout-url="/logout.html" logout-success-url="/admin/rolusuariolist.html" />
	</http>

	<!-- manager responsible for loading user account with assigned roles -->
	<authentication-manager alias="authenticationManager">
		<authentication-provider>
			<!-- <jdbc-user-service data-source-ref="DataSource"/> -->
			<user-service>
				<user name="admin" password="admin" authorities="ROLE_ADMIN" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>